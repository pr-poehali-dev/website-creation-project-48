{
  "tests": [
    {
      "name": "Test OPTIONS for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "bodyMatcher": "exact"
    },
    {
      "name": "Test POST without image",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Image data required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test invalid method",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {
        "error": "Method not allowed"
      },
      "bodyMatcher": "partial"
    }
  ]
}
